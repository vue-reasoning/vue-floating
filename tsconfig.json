{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "jsx": "preserve",
    "types": ["vite/client", "vitest/globals", "vue/types/jsx"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@visoning/vue-floating-core": ["packages/core/src/index.ts"],
      "@visoning/vue-floating-core/components": ["packages/core/src/components/index.ts"],
      "@visoning/vue-floating-interactions": ["packages/interactions/src/index.ts"]
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src",
    "packages/*/*.ts",
    "packages/*/__tests__"
  ],
  "exclude": ["node_modules"]
}
